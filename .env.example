# =============================================================================
# DATABASE PROVIDER
# =============================================================================
# Choose your database: 'supabase' or 'neon'
DATABASE_PROVIDER=supabase

# =============================================================================
# AUTH PROVIDER
# =============================================================================
# Choose your auth: 'supabase' or 'nextauth'
AUTH_PROVIDER=supabase

# =============================================================================
# SUPABASE (when DATABASE_PROVIDER=supabase or AUTH_PROVIDER=supabase)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# NEON (when DATABASE_PROVIDER=neon)
# =============================================================================
DATABASE_URL=postgres://user:password@host/database?sslmode=require

# =============================================================================
# NEXTAUTH (when AUTH_PROVIDER=nextauth)
# =============================================================================
NEXTAUTH_SECRET=your-secret-key
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# AWS SES (Email)
# =============================================================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# NEXUS INTEGRATION
# =============================================================================
NEXUS_API_URL=https://nexus.wentzel.ventures
NEXUS_PRODUCT_SLUG=your-product-slug

# =============================================================================
# STRIPE (Optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# =============================================================================
# APP
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
